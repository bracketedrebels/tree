{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "stripInternal": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "preserveConstEnums": false,
        "declaration": true,
        "lib": [
            "es2015"
        ],
        "outDir": "../dist"
    },
    "include": [
        "../src/**/*"
    ]
}
